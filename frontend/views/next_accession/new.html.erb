<%= setup_context :title => "New Accession (#{@id})", :trail => [[I18n.t("plugins.next_accession.title"), {:controller => :next_accession, :action => :index}]] %>

<div class="record-pane">
  <div class="row">
    <div class="col-md-12">
      <%= render_aspace_partial :partial => "shared/flash_messages" %>
      <h2><%= I18n.t("plugins.next_accession.title") %></h2>
    </div>
  </div>

  <div class="subrecord-form-dummy">
    <h3>New Accession (<%= @id %>)</h3>
    <div class="subrecord-form-container">
      <%= form_tag({:controller => :next_accession, :action => :create}, {:class => "form-horizontal", :method => "GET"}) do |form| %>

        <div class="form-group required">
          <label class="control-label col-sm-2">ID</label>
          <div class="col-sm-8">
            <input id="next-accession-id" name="id" type="text" class="input-large" value="<%= @id %>"></input>
          </div>
        </div>

        <div class="form-group required">
          <label class="control-label col-sm-2">Title</label>
          <div class="col-sm-8">
            <textarea id="next-accession-title" class="form-control" name="title" rows="3"></textarea>
          </div>
        </div>

        <div class="form-group">
          <div class="controls">
            <button class="btn btn-primary"><%= I18n.t("plugins.next_accession.actions.submit") %></button>
            <%= link_to I18n.t("actions.cancel"), {:controller => :next_accession, :action => :index}, :class => "btn btn-cancel btn-default pull-right" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
