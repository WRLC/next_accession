<%= setup_context :title => I18n.t("plugins.next_accession.title") %>

<div class="record-pane">
  <div class="row">
    <div class="col-md-12">
      <%= render_aspace_partial :partial => "shared/flash_messages" %>
      <h2><%= I18n.t("plugins.next_accession.title") %></h2>
    </div>
  </div>

  <div class="subrecord-form-dummy">
    <h3>Year of Accession</h3>
    <div class="subrecord-form-container">
      <%= form_tag({:controller => :next_accession, :action => :new}, {:class => "form-horizontal", :method => "POST"}) do |form| %>

        <div class="form-group required">
          <label class="control-label col-sm-2">Year</label>
          <div class="col-sm-8">
            <input id="next-accession-year" name="year" type="text" class="input-large" placeholder="Enter a year... "></input>
          </div>
        </div>

        <div class="form-group">
          <div class="controls">
            <button class="btn btn-primary"><%= I18n.t("plugins.next_accession.actions.submit") %></button>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
